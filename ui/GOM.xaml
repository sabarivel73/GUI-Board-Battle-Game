<UserControl x:Class="ui.GOM"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ui"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Border Width="300" Height="150" Style="{StaticResource borderstyle}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="1*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.ColumnSpan="2" x:Name="wt" Text="Vanakam" Style="{StaticResource textstyle}" FontSize="30"></TextBlock>
            <TextBlock Grid.Row="1" Grid.ColumnSpan="2" x:Name="rt" Text="Reason" Style="{StaticResource textstyle}" FontSize="17"></TextBlock>
            <Button Grid.Row="2" Content="Restart" Style="{StaticResource buttonstyle}" Width="85" Height="35" Click="restart_click"></Button>
            <Button Grid.Row="2" Grid.Column="1" Content="Exit" Style="{StaticResource buttonstyle}" Width="85" Height="35" Click="exit_click"></Button>
        </Grid>
    </Border>
</UserControl>
