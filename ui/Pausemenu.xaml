<UserControl x:Class="ui.Pausemenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ui"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Border Width="300" Height="150" Style="{StaticResource borderstyle}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.ColumnSpan="3" Text="Restart Game ?" Style="{StaticResource textstyle}" FontSize="30"></TextBlock>
            <Button Grid.Row="3" Content="Continue" Style="{StaticResource buttonstyle}" Width="85" Height="35" Click="continue_click"></Button>
            <Button Grid.Row="3" Grid.Column="1" Content="Restart" Style="{StaticResource buttonstyle}" Width="85" Height="35" Click="restart_click"></Button>
        </Grid>
    </Border>
</UserControl>
