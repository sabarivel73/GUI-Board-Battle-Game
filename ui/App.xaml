<Application x:Class="ui.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:ui"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <SolidColorBrush x:Key="boxcolor">#CA33FF</SolidColorBrush>
        <SolidColorBrush x:Key="fillcolor">#D4A3E3</SolidColorBrush>
        <SolidColorBrush x:Key="textcolor">#FFFFFF</SolidColorBrush>
        <SolidColorBrush x:Key="buttoncolor">#C100FF</SolidColorBrush>
        <Style TargetType="Border" x:Key="borderstyle">
            <Setter Property="BorderThickness" Value="5"></Setter>
            <Setter Property="BorderBrush" Value="{StaticResource boxcolor}"></Setter>
            <Setter Property="Background" Value="{StaticResource fillcolor}"></Setter>
            <Setter Property="CornerRadius" Value="10"></Setter>
        </Style>
        <Style TargetType="TextBlock" x:Key="textstyle">
            <Setter Property="FontFamily" Value="Segoe UI Light"></Setter>
            <Setter Property="FontSize" Value="15"></Setter>
            <Setter Property="HorizontalAlignment" Value="Center"></Setter>
            <Setter Property="VerticalAlignment" Value="Center"></Setter>
            <Setter Property="Foreground" Value="{StaticResource textcolor}"></Setter>
        </Style>
        <Style TargetType="Button" x:Key="buttonstyle">
            <Setter Property="FontFamily" Value="Segoe UI Light"></Setter>
            <Setter Property="FontSize" Value="15"></Setter>
            <Setter Property="BorderThickness" Value="3"></Setter>
            <Setter Property="BorderBrush" Value="{StaticResource boxcolor}"></Setter>
            <Setter Property="Background" Value="{StaticResource buttoncolor}"></Setter>
            <Setter Property="Foreground" Value="{StaticResource textcolor}"></Setter>
            <Style.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="5"></Setter>
                </Style>
            </Style.Resources>
        </Style>
    </Application.Resources>
</Application>
